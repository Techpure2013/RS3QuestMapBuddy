{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "module": "ESNext",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "strictNullChecks": false,
    "lib": ["es2019", "dom"],
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src", // This includes all .ts and .tsx files in your src folder
    "src/types/**/*.d.ts"
  ],
  "allowTsInNodeModules": true
}
